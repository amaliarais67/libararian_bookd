<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Libararian Books</title>
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container-fluid my-3">
      <div class="container text-center bg-dark bg-gradient rounded">
        <h1 class="text-center text-light">
            Libararian Books Applications
        </h1>
        <a class="btn btn-sm btn-success" href="/">Home</a>
        <a class="btn btn-sm btn-success" href="/books">Books</a>
        <hr class="my-3" />
      </div>
      <div class="container text-center my-3">
        <h3>Books</h3>
        <p>List of Books</p>

        <a href="/books/add" class="btn btn-sm btn-primary">+ Add Books</a>
      </div>
      <div class="container">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Id</th>
              <th>Title</th>
              <th>Author</th>
              <th>Release Date</th> 
              <th>Page</th>
              <th>Genre</th> 
            </tr>
          </thead>
          <tbody>
             <% no = 1 %>
            <% books.forEach(books => { %>
              <td> 
               <%=no++%>
              <input type="hidden" value= <%=books.id%>/>
            </td>
              <td>
                <div class="float-start">
                    <h5><%= books.title %></h5>
                  </div>
              </td>
              <td>
                <div class="float-start">
                    <h5><%= books.author %></h5>
                  </div>
              </td>
              <td>
                <div class="float-start">
                    <h5><%= books.released_date %></h5>
                  </div>
              </td>
              <td>
                <div class="float-start">
                    <h5><%= books.page %></h5>
                  </div>
              </td>
              <td>
                <div class="float-start">
                    <h5><%= books.genre %></h5>
                  </div>
              </td>
              <!-- <td>
                <% status = books.status %>
                <h5><% if(status === true){ %>
                  <h5>Done!!!</h5>
                <% } else{ %>  
                  <h5>On Progress</h5>
               <% } %></h5>
              </td> -->
              <td>
                        <td>
                <div class="">
                  </div>
                  <a
                    class="btn btn-sm btn-info"
                    href="/books/edit/<%= books.id %>"
                    >Update</a
                  >
                  <a
                    class="btn btn-sm btn-danger"
                    href="/books/delete/<%= books.id %>"
                    >Delete</a
                  >
                </div>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- JS Bootstrap -->
    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
